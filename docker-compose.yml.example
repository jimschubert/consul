consul1:
  image: "jimschubert/consul:latest"
  container_name: "consul1"
  hostname: "consul1"
  ports:
    - "8400:8400"
    - "8500:8500"
    - "53:53"
  command: "agent -data-dir /data -server -bootstrap-expect 3 -ui-dir /ui -client=0.0.0.0"

consul2:
  image: "jimschubert/consul:latest"
  container_name: "consul2"
  hostname: "consul2"
  ports:
    - "8400"
    - "8500"
    - "8600"
  links:
    - "consul1:consul1"
  command: "agent -server -join consul1"

consul3:
  image: "jimschubert/consul:latest"
  container_name: "consul3"
  hostname: "consul3"
  ports:
    - "8400"
    - "8500"
    - "8600"
  links:
    - "consul1:consul1"
  command: "agent -server -join consul1"